.fixBounces{
  height: 100vh;
  position:fixed;
  top: 0;
  left: 0;
  right:0
}
/* 裁剪横线图片，高度全显示 */
.aspect-pic{
  width: 280rpx;
  height: 200rpx; 
}
.aspect-pic-default{
  width: 260rpx;
  height: 154rpx; 
}
.aspect-pic-mini{
  width: 200rpx;
  height: 150rpx; 
}