page,view,text,swiper,swiper-item,image,navigator{
    padding:0;
    margin:0;
    box-sizing: border-box;
}
page{
    /*样式变量*/
    --primaryColor: #0076CE;
    --gray9: #999;
    color: #333;
    font-size: 30rpx;
    position: relative;
    background-color: #fff;
}


/* 图文 */
.piclist .pitem{
  margin-bottom: 40rpx;
  display: flex;
}
/* 左侧固定宽度 */
.piclist .pic{
  width: 260rpx;
  height: 154rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.piclist .content{
  flex:1;
  /* 避免左侧被不折行挤压 */
  overflow: hidden; 
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.piclist .content .c-hd{
  padding-top: 6rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.piclist .content .c-ft{
  display: flex;
  justify-content: space-between;
}
.piclist .content .c-ft .c-ft-btn{
  text-align: right;
}
.piclist.large .pic{
  width: 280rpx;
  height: 200rpx;
}
.piclist.mini .pic{
  width: 200rpx;
  height: 150rpx;
}
/* 按钮 */
.btn{
  width: 140rpx !important;
  height: 48rpx;
  line-height: 48rpx;
  background-color: var(--primaryColor);
  color: #fff;
  border-radius: 28rpx;
  font-size: 24rpx;
  padding:0;
  font-weight: normal;
}
.btn.disabled{
  background-color: #6BE1C7;
  color: #FFF;
}
.btn.large{
  width: 90% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-weight: bold;
  font-size: 30rpx;
  letter-spacing: 5rpx;
}

/*公用*/
.fs12{
  font-size: 24rpx !important;
}
.fs17{
  font-size: 34rpx !important;
}
.c9{
  color:var(--gray9) !important;
}
.tr{
  text-align: right;
  display: flex;
  justify-content: space-between;
}
.dell-container{
  padding: 30rpx
}
.dell-image{
  width: 100% !important;
}
.dell-input{
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 0 30rpx;
  height: 74rpx;
  line-height: 74rpx;
}
.dell-textarea{
  padding:30rpx;
  width: calc(100% - 60rpx);
  min-height: 200rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 0 14rpx 0 rgba(1, 18, 135, 0.15);
}
.placeholder-color{
  color: #d7d7d7;
}
.navbar-bg{
  position: absolute;
  left: 0;
  right: 0;
  z-index: -1;
}
.blank{
  overflow: hidden;
}
/* 日期选择框 */
.date-picker-wrap{
  position: relative;
}
.date-picker-wrap .caret{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 24rpx;
  height: 14rpx;
}
.textCount{
  position: absolute;
  bottom: 30rpx;
  right: 60rpx;
  z-index: 99;
}

/* 登录 */
.login-wrap{
  border-radius: 30px 30px 0px 0px;
  background-color: #fff;
}
.login{
  padding: 90rpx 0;
}
.login .login-item{
  display: flex;
  align-items: center;
  height: 90rpx;
  border-radius: 45rpx;
  margin-bottom: 40rpx;
  background-color: #F8F8F8;
  padding: 0 30rpx;
}
.login .login-item image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}
.login .login-item navigator{
  width: 150rpx;
  text-align: right;
  font-size: 24rpx;
  color: #0076CE; 
}
.login .login-item .li-ipt{
  flex: 1;
}
.login-blank{
  height: 252rpx;
}
.login-title{
  text-align: center;
  font-size: 44rpx;
  font-weight: bold;
  position: relative;
}
.login-title span{
  position: relative;
  z-index: 9;
}
.login-title::after{
  display: block;
  content: '';
  position: absolute;
  bottom: -2rpx;
  width: 88rpx;
  height: 16rpx;
  background-color: #ADD5F2;
  z-index: 0;
	left: 50%;
	-webkit-transform: translate(-50%, 0);
	transform: translate(-50%,0);
}
.login-submit{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.login-tip{
  padding: 30rpx 0 60rpx;
  text-align: center;
}
