
.dialog-bg{
  position: absolute;
  left: 0;
  right: 0;
  z-index: 0;
  border-radius: 28rpx;
  width: 100% !important;
}
.mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.dialog {
  position: fixed;
  z-index: 5000;
  width: 640rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 28rpx;
  min-height: 390rpx;
  padding-bottom: 30rpx;
  overflow: hidden;
}
.dialog-body{
  position: relative;
  z-index: 9;
}
.dialog-title {
  font-size: 34rpx;
  padding: 188rpx 30rpx 15rpx;
  font-weight: bold;
}

.dialog-content {
  padding: 10rpx 30rpx 40rpx;
  min-height: 80rpx;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
  overflow: auto;
  text-align: center;
  font-size: 30rpx;
}
.dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}

.dialog-btn {
  background-color: #0076CE;
  color: #fff;
  border-radius: 28rpx;
  font-size: 24rpx;
  padding:0;
  font-weight: normal;
  width: 60% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-weight: bold;
  font-size: 30rpx;
  letter-spacing: 5rpx;
}
.dialog-close{
  position: absolute;
  bottom: -21%;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
  transform: translate(-50%, 0);
  width: 84rpx;
  height: 84rpx;
  z-index: 99;
}

