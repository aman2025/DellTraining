
.course-detail{
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 0 14px 0 rgba(1, 18, 135, 0.08);
  padding: 40rpx 30rpx 30rpx;
  margin-bottom: 28rpx;
  margin-top: 118rpx;
}
.course-detail .cd-hd{
  position: relative;
  margin: -118rpx 0 0 -30rpx;
}
.course-detail .cd-hd span{
  font-weight: bold;
  z-index: 9;
  position: relative;
  display: block;
  padding: 5rpx;
}
.course-detail .cd-bd{
  text-align: center;
  padding: 0 0 0;
}
.course-detail .cd-bd .art-view{
  text-align: center;
  margin-bottom: 0;
  padding: 60rpx 0 0;
}
.course-detail .video-view{
  padding: 60rpx 0 0;
}
.course-detail .cd-bd .cd-video-title{
  font-weight: bold;
  padding-bottom: 10rpx;
  text-align: left;
}
.course-detail .cd-bd .cd-video-content{
  overflow: hidden;
  border-radius: 16rpx;
}
.course-detail .cd-bd .cd-video-content video{
  border:1px solid #F6F6F6;
}
.course-detail .cd-bd .cd-video-tip{
  padding-top: 10rpx;
}
.course-detail .cd-img{
  display: flex;
  justify-content: center;
  padding: 0 0 20rpx;
  overflow: hidden;
}
.course-title-bg{
  width: 72rpx;
  height: 16rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 0;
  background: linear-gradient(104deg, #694FFF 0%, rgba(76, 154, 252, 0.58) 52%, rgba(74, 160, 252, 0) 100%);
}
.space-img{
  opacity: 0;
  margin-top: -180rpx;
}
.navbar-title{
  color: #fff !important;
}
/* 单独页面中，导航栏背景透明 */
.navbar {
  background-color: transparent !important;
}
.piclist .content .c-remark,
.piclist .content .c-hd{
  text-align: left;
}
.piclist .content .c-remark{
  font-size: 26rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.btn-wrap{
  padding-top: 30rpx;
}
.course-detail-video{
  /* 视频原宽高 960x540 */
  height: 356rpx; 
}
