.notice{
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 0 14px 0 rgba(1, 18, 135, 0.08);
  padding: 10rpx 30rpx 30rpx;
  margin-bottom: 28rpx;
}
.notice .nt-bd{
  padding: 20rpx 0;
  color: var(--gray9);
  font-size: 26rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.notice .nt-ft{
  font-size: 24rpx;
  text-align: right;
  color: var(--gray9);
}
.notice-detail-title{
  font-weight: bold;
  padding-bottom: 20rpx;
}
.notice-detail-pic-wrap{
  padding-top: 20rpx;
}
.notice-detail-pic{
  border-radius: 16rpx;
}