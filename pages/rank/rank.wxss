.rank{
  border-radius: 30px 30px 0px 0px;
  background-color: #fff;
}
.rank .rank-item{
  display: flex;
  height: 80rpx;
  margin-bottom: 60rpx;
}
.rank .rank-item.th{
  margin-bottom: 30rpx;
  height: 40rpx;
  overflow: hidden;
}
.rank .rank-item .rk-hd{
  width: 164rpx;
}
.rank .rank-item view{
  line-height: 80rpx;
}
.rank .rank-item .rk-hd span{
  padding-left: 30rpx;
}
.rank .rank-item .rk-bd{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-weight: bold;
}
.rank .rank-item .rk-ft{
  width: 164rpx;
}
.rank .icon-rank{
  width: 80rpx;
  height: 80rpx;
}
.rank .rank-item.th view{
  line-height: 42rpx;
  font-weight: normal;
}
.rank-blank{
  height: 230rpx;
}
.navbar-title{
  color: #fff !important;
}
/* 单独页面中，导航栏背景透明 */
.navbar {
  background-color: transparent !important;
}
