.list-item{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 54rpx;
    line-height: 54rpx;
    padding: 0 30rpx;
    margin-bottom: 72rpx;
}
.list-item .list-item-hd{
   width:80rpx;
}
.list-item .list-item-bd{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
 }
 .list-item .list-item-ft{
    text-align: right;
    position: relative;
 }
 .list-item .list-item-ft:after {
  content: "";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #D7D7D7;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
  position: relative;
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}
.list-item:active{
    background-color: #f5f8fc;
}
.list-icon{
    display: block;
    width: 54rpx;
    height: 54rpx;
}
.my-banner-wrap{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px 0;
}
.my-banner{
    width:690rpx;
