/* 单独页面中，导航栏背景透明 */
.navbar {
  background-color: #0076CE !important;
}
.navbar-title {
  background-color: #0076CE !important;
  color: #fff !important;
}

.search-bar{
  position: fixed;
  padding: 10rpx 130rpx 24rpx 30rpx;
  position: relative;
  z-index: 99999;
  background-color: #0076CE;
}
.search-input{
  height: 64rpx;
  line-height: 64rpx;
  background-color: #fff;
  border-radius: 32rpx;
  width: 100%;
  padding-left: 30rpx;
}
.search-btn{
  width:40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  z-index: 9;
}